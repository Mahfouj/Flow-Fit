<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gardiant_color"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Custom_Workout">




    <!-- Top Gradient Background with Logo -->
    <LinearLayout
        android:id="@+id/top_section"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/placeholder"
            android:contentDescription="Logo" />
    </LinearLayout>

    <!-- Bottom Rounded White Drawer -->
    <LinearLayout
        android:id="@+id/bottom_drawer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_drawer"
        android:padding="14dp"
        android:elevation="2dp">

        <TextView
            android:text="Custom Workouts"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Make your selection, set them, and they'll automatically generate your workout."
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Dot indicators -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <!-- Get Started Button -->
        <Button
            android:id="@+id/btn_get_started"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Start Training"
            android:textColor="@color/button_text"
            android:background="@drawable/button"
            />

        <!-- Sign-in Text -->

    </LinearLayout>

</LinearLayout>